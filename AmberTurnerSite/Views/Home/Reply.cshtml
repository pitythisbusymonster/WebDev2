@model Reply
@{
    ViewData["Title"] = "Reply";
}

<div class="text-center jumbotron">
    <div class="container">
        <h1> Reply to Post</h1>
    </div>
</div>

<div class="form-group">
    <div asp-validation-summary="All"></div>
    <form method="post" class="container">

        <div class="row">
            <label asp-for="ReplyText" class="control-label col-sm-2">Post:</label>
            <input asp-for="ReplyText" class="form-control col-sm-10 mb-2" style="height:300px" />
            <span asp-validation-for="ReplyText"></span>
        </div>

        <div class="container pt-4">
            <button type="submit" class="btn btn-dark">Post Reply</button>
        </div>
    </form>

</div>